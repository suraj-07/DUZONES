<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#ffffff"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            card_view:cardElevation="8dp">

            <ImageView
                android:id="@+id/iml"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@raw/loadimage"
                android:contentDescription="eventImage"
                android:scaleType="centerCrop"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrecgreystroke"
            android:paddingHorizontal="8dp"
            android:text="Event name"
            android:layout_margin="8dp"
            android:textColor="#7c7c7c"
            android:textSize="18sp"
            android:textStyle="normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="Click for details"
            android:layout_marginStart="8dp"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_location"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                 />

            <TextView
                android:id="@+id/placeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Location....................."
                android:textColor="#ffffff"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_venue"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/venueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Venue....................."
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_date"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Date....................."
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_time"
                android:layout_marginLeft="40dp"
                />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Time....................."
                android:textColor="#ffffff"
                android:textSize="12sp" />






        </LinearLayout>



        <TextView
            android:id="@+id/linkTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#212121"
            android:padding="10dp"
            android:text="Event name"
            android:textColor="#212121"
            android:textSize="30sp"
            android:textStyle="bold" />




    </LinearLayout>

</android.support.v7.widget.CardView>