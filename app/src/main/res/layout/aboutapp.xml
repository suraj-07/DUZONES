<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_webhome"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <ImageView
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:background="@raw/finalpngall" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="25dp"
        android:background="#2341d8"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:textColor="@color/greylight_"
        android:textSize="14dp"
        android:textAlignment="textStart"
        android:text="@string/aboutapptext"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:textColor="@color/greylight_"
        android:textSize="14dp"
        android:textAlignment="textStart"
        android:text="This app provides all the inormation of your course syllabus, previous year papers of all the courses and semesters,time table and attendance by selecting your college and datesheet at just one click"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:textColor="@color/greylight_"
        android:textSize="14dp"
        android:textAlignment="textStart"
        android:text="This app also provides details about the College including their courses,brochures, official websites and their location.\n\nYou can also check cutoffs,result,admission related issues and on going event in the DU Colleges and outside DU Colleges by category.\n\nAll the details are daily updated as provided on the DU official website."
        android:layout_marginBottom="25dp"/>

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Rights Reserved"
            android:textColor="@color/colorPrimary"

            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>


</ScrollView>