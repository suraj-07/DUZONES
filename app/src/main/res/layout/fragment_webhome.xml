<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgapp1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/w1"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        android:background="@drawable/circle_grey"
                        android:contentDescription="TODO"
                        android:elevation="6dp"

                        android:src="@drawable/ic_school" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif"
                            android:text="DU Home site"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/dvifew"
                            android:layout_width="match_parent"

                            android:layout_height="2dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="3dp"
                            android:background="#3C3F41" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="sans-serif"
                            android:paddingLeft="6dp"
                            android:text="List of all D.U colleges and their details"
                            android:textColor="@color/greylight_"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/w2"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        android:background="@drawable/circle_grey"
                        android:contentDescription="TODO"
                        android:elevation="6dp"

                        android:src="@drawable/ic_theater" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif"
                            android:text="DU Admission Site"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/view"
                            android:layout_width="match_parent"

                            android:layout_height="2dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="3dp"
                            android:background="#282727" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="sans-serif"
                            android:paddingLeft="6dp"
                            android:text="Access an download D.U Cut off's from here..."
                            android:textColor="@color/greylight_"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/w3"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        android:background="@drawable/circle_grey"
                        android:contentDescription="TODO"
                        android:elevation="6dp"

                        android:src="@drawable/ic_graduation" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif"
                            android:text="DU Exam Site"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/view2"
                            android:layout_width="match_parent"

                            android:layout_height="2dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="3dp"
                            android:background="#282727" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="sans-serif"
                            android:paddingLeft="6dp"
                            android:text="Access and download your result here..."
                            android:textColor="@color/greylight_"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
</LinearLayout>