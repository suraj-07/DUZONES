<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_home"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center_horizontal"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        >


        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="10dp"
                    android:src="@raw/dpamzi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Amzad Khan"
                    android:textAlignment="center"
                    android:textColor="#4c4c4c"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/p_amzi"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/roundrectwo"
                    android:elevation="8dp"
                    android:text="Profile"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="10dp">


                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@raw/dpsuraj"
                    />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Suraj Prasad"
                    android:textAlignment="center"
                    android:textColor="#4c4c4c"/>

                <Button
                    android:id="@+id/suraj_button"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/roundrectwo"
                    android:elevation="8dp"
                    android:text="Profile"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#ffff"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="10dp"
            android:background="#969696"
            android:layout_marginBottom="25dp"/>



        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students of\nBhaskaracharya College of Applied Sciences\nDelhi University\nPursuing B.Sc(Hons.) in Computer Science (2nd year)"
            android:textColor="#4c4c4c"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="#969696"
            android:layout_marginBottom="30dp"/>


        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credits:"
            android:textColor="#4c4c4c"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technical work, Application Development, Documentation Support, Documentation Layouts Designing and creativity all done by both developers in a team."
            android:textColor="#3c3c3c"
            android:textSize="14dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />














    </LinearLayout>


    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Rights Reserved"
        android:textColor="#4c4c4c"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        />

    <TextView

        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us Via Profile"
        android:textColor="#ffff"
        android:textSize="18dp"
        android:padding="4dp"
        android:background="#296F2C"/>
</LinearLayout>